<div class="cta-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="cmn-content st-content">
                    <h4>{{page.header.section.content.left.title}}</h4>
                    <p>{{page.header.section.content.left.text}}</p>
                    <a href="#" class="box-btn type-2">{{page.header.section.content.left.anchor}}<i
                            class="far fa-angle-right"></i></a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="offer-g-wrapper">
                    {% for card in page.header.section.content.right.cards %}
                    {% set icon = page.find('/images').media[card.icon].url | e %}
                    <div class="single-offer">
                        <div class="offer-icon">
                            <img src="{{icon}}" alt="Icon" class="img-fluid">
                        </div>
                        <h5>{{card.heading}}</h5>
                        <p>{{card.text}}</p>
                        <a href="#" class="cmn-link">{{card.anchor}}<i class="far fa-long-arrow-right"></i>
                        </a>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>